<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.efcs.a3_1.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numero_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView2"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/numero1"
        android:layout_alignStart="@+id/numero1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numero_1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-7dp"
        android:layout_marginTop="21dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp" />

    <TextView
        android:id="@+id/textView_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/resultado"
        android:layout_below="@+id/numero2"
        android:layout_alignStart="@+id/numero2" />

    <Button
        android:id="@+id/button_sumar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sumar"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView_resultado"
        android:layout_marginStart="20dp" />

    <EditText
        android:id="@+id/numero1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:id="@+id/numero2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <Button
        android:id="@+id/button_restar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restar"
        android:layout_marginEnd="25dp"
        android:layout_alignBaseline="@+id/button_sumar"
        android:layout_alignBottom="@+id/button_sumar"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button_multiplicar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_sumar"
        android:layout_below="@+id/button_sumar"
        android:layout_marginTop="32dp"
        android:text="@string/multiplicar" />

    <Button
        android:id="@+id/button_dividir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dividir"
        android:layout_alignBaseline="@+id/button_multiplicar"
        android:layout_alignBottom="@+id/button_multiplicar"
        android:layout_alignStart="@+id/button_restar" />

</RelativeLayout>
